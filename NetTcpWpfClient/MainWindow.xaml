<Window x:Class="NetTcpWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NetTcpWpfClient"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        ResizeMode="NoResize"
        mc:Ignorable="d">
    <Grid>
        <TextBox x:Name="chat"
                 Width="517"
                 Margin="0,212,0,23"
                 HorizontalAlignment="Left"
                 Background="#FFFFFBE8"
                 KeyDown="chat_KeyDown"
                 TextWrapping="Wrap" />
        <TextBox x:Name="chatMessage"
                 Width="517"
                 Height="212"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Background="#FFEFEEF5"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />
        <Button x:Name="sentMessage"
                Width="517"
                Height="42"
                Margin="0,273,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FF32CD0F"
                Click="sentMessage_Click"
                Content="Send"
                RenderTransformOrigin="0.5,0.5" />
    </Grid>
</Window>
